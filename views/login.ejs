<% include ./partials/header.ejs %>
  <div class="w-full min-h-screen bg-black text-white py-4 flex flex-col items-center justify-center">
    <div class="flex flex-col items-center gap-0 px-4">
      <img class="w-1/2" src="/images/logo.png" alt="">
      <% if (error.length > 0){ %>
        <p class="text-sm text-violet-200"><%= error %></p>
      <% }%>
      <form class="px-5 w-full" action="/login" method="post">
        <input class="px-4 mt-0 py-2 border-1  rounded-md block w-full bg-zinc-900" type="text" placeholder="Username" name="username">
        <input class="px-4 mt-2 py-2 border-1 rounded-md block w-full bg-zinc-900" type="password" placeholder="Password" name="password">
        <input class="w-full bg-red-500 px-3 py-3 rounded-md mt-3" type="submit" value="Log In">
      </form>
      <span class="py-3">Don't have an account yet ? <a href="/" class="text-red-400">Sign Up</a></span>
    </div>
  </div>
<% include ./partials/footer.ejs %>