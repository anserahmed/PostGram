<% include ./partials/header.ejs %>
<div class="w-full min-h-screen">
  <div class=" bg-black text-white py-5">
    <div class="flex max-w-[500px] mx-auto justify-between items-center px-4">
      <a class="text-sm text-red-400" href="/profile"><i class="ri-arrow-left-s-line"></i> Profile</a>
      <h2 class="leading-none text-sm">Edit Profile</h2>
      <a class=" text-red-400" href="/feed"><i class="text-red-400 ri-home-line"></i> Home</a>
    </div>
    <div class="flex flex-col items-center gap-2 mt-20">
      <div class="image w-20 h-20 bg-red-100 rounded-full"></div>
      <button id="editbtn" class="text-red-400 capitalize">Edit picture</button>
    </div>
    <div class="gap-5 px-8 mt-10">
      <h3 class="text-lg leading-none mx-1">Account Details</h3>
      <form class="w-full py-2" action="/update" method="post" enctype="multipart/form-data">
        <input hidden type="file" id="imageinput" name="image">
        <input class="px-3 mt-2 py-2  rounded-md block border-2 border-zinc-800 w-full bg-black" type="text" placeholder="username" name="username" value="<%= user.username %>">
        <input class="px-3 mt-2 py-2  rounded-md block border-2 border-zinc-800 w-full bg-black" type="text" placeholder="name" name="name" value="<%= user.name %>">
        <textarea class="px-3 mt-2 py-2  rounded-md block border-2 border-zinc-800 w-full bg-black resize-none" placeholder="Bio" name="bio"><%= user.bio %></textarea>
        <input class="w-full bg-red-500 px-3 py-3 rounded-md mt-3" type="submit" value="Update Details">
      </form>
    </div>
  </div>
</div>

  <script>
 document.querySelector("#editbtn")
  .addEventListener("click",function(){
 document.querySelector("#imageinput").click();
  })
 
  </script>
<% include ./partials/footer.ejs %>
