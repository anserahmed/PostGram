<%- include('partials/header') %>

<div class="bg-black">
  <div
    class="w-full min-h-screen h-full max-w-[400px] mx-auto bg-black text-white py-5"
  >
    <div class="nav flex-row items-center">
      <h3 class="text-red-400 text-lg text-center mb-1 mt-5 justify-center">
        <%=user.username %>
        <!-- <a href="/logout"><i class="text-white ri-logout-box-r-line"></i></a> -->
      </h3>
      <div class="icons flex items-center justify-center"></div>
    </div>

    <div class="flex flex-col gap-5 justify-between items-center mt-3">
      <div class="w-24 h-24 rounded-full bg-sky-100 overflow-hidden">
        <img
          class="w-full h-full bg-white object-cover"
          src="/images/uploads/<%= user.profileImage %>"
          alt="sbgjwegeriotgjelorerrbtht8y59gjk"
        />
      </div>

      <div class="stats flex flex-col gap- items-center justify-between">
        <div class="flex flex-col gap-1 items-center justify-center">
          <h3 class="text-xl mb-1"><%= user.name%></h3>
          <p class="text-xs italic tracking-tight opacity-60"><%= user.bio%></p>
        </div>

        <div
          class="flex gap-1 justify-center mt-5 bg-blue-500 px-4 rounded-lg items-center"
        >
          <!-- <button
           
            type="button"
            class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
          >
            Default popover
          </button> -->

          <div
            data-popover
            id="idhai"
            role="tooltip"
            class="absolute backdrop-blur-lg bg-transparent/30 rounded-lg z-10 invisible inline-block w-64 text-sm text-gray-500 transition-opacity duration-300 rounded-lg shadow-sm opacity-0"
          >
            <div class="px-3 text-gray-100 py-2">
              <p>
                Trust your developer @resnarts. You can message <%= user.name%>
                very soon!!
              </p>
            </div>
            <div data-popper-arrow></div>
          </div>

          <a data-popover-target="idhai" class="py-2 text-sm rounded-md" href=""
            >Message
          </a>
          <svg
            class="h-4 w-4 text-gray-300"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <line x1="22" y1="2" x2="11" y2="13" />
            <polygon points="22 2 15 22 11 13 2 9 22 2" />
          </svg>
        </div>
      </div>
    </div>

    <div class="flex place-content-center gap-1 px-6 mt-10">
      <h3><%= user.posts.length %></h3>
      <h4 class="text-red-400">Posts</h4>
    </div>

    <div
      class="max-w-[500px] mx-auto post w-full flex gap-1 place-content-center p-2 mt-3 flex-wrap"
    >
      <% user.posts.reverse().forEach(function(post){ %>
      <div class="posts w-[32.5%] h-32 bg-sky-100 rounded-lg overflow-hidden">
        <img
          class="h-full w-full object-cover"
          src="/images/uploads/<%- post.picture %>"
          alt=""
        />
      </div>
      <% }) %>
    </div>
    <!-- <p class="text-sm opacity-20 italic px-1 py-5 text-center items-end"> &copy; Postgram. All rights reserved</p> -->
  </div>
</div>

<%- include('partials/footer') %>
