<% include ./partials/header.ejs %>
  <div class="w-full min-h-screen bg-black text-white py-5 flex flex-col items-center justify-center">
    <div class="flex flex-col items-center gap-0 px-4">
      <img class="w-1/2" src="/images/logo.png" alt="">
      <form class="w-full px-5" action="/register" method="post">
        <input class="px-4 mt-2 py-3 border-1 rounded-md block w-full bg-zinc-900" type="text" placeholder="Username" name="username">
        <input class="px-4 mt-2 py-3 border-1 rounded-md block w-full bg-zinc-900" type="email" placeholder="Email" name="email">
